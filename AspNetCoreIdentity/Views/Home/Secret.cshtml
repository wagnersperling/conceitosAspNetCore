@using AspNetCoreIdentity.Extensions
@{
    ViewData["Title"] = "Segredo";
}
<h1>@ViewData["Title"]</h1>

<p>Página de segredo.</p>


@{
    if (this.IfClaim("Produtos", "Ler"))
    {
        <p>Você só verá isso se tiver permissao de ler!</p>
    }
}

<div>
    @Html.ActionLink("Secret", "Secret").IfClaimShow(Context, "Produtos", "Ler")
</div>

<div>
    <br />
    <a href="#" class="btn btn-danger @Html.Raw(this.IfClaimShow("Produtos", "Adicionar"))">Excluir</a>
</div>